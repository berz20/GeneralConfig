# Open document in fit-width mode by default
set adjust-open "best-fit"


set recolor false
set recolor-keephue true
# Lighthaus Colors:

set notification-error-bg       "#FC2929"
set notification-error-fg       "#18191E"
set notification-warning-bg     "#d80a59"
set notification-warning-fg     "#ffffff"
set notification-bg             "#D68EB2"
set notification-fg             "#18191E"

set completion-bg               "#18191E"
set completion-fg               "#4081f9"
set completion-group-bg         "#18191E"
set completion-group-fg         "#a83bdb"
set completion-highlight-bg     "#40def9"
set completion-highlight-fg     "#21252D"

set index-bg                    "#18191E"
set index-fg                    "#4081f9"
set index-active-bg             "#21252D"
set index-active-fg             "#40def9"

set inputbar-bg                 "#21252D"
set inputbar-fg                 "#c8c3d8"
set statusbar-bg                "#000000"
set statusbar-fg                "#ff00ff"

set highlight-color             "#9cfc02"
set highlight-active-color      "#f940e7"

set default-bg                  "#000000"
set default-fg                  "#e5e0c7"

set render-loading              true
set render-loading-fg           "#FFEE79"
set render-loading-bg           "#18191E"

# Recolor mode settings

set recolor-lightcolor          "#191612"
set recolor-darkcolor           "#e5e0c7"
set scroll-step 50

set font "monospace normal 11"
